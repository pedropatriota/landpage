{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
         "allowJs":true,
         "skipLibCheck": true,
         "allowSyntheticDefaultImports":true,
         "forceConsistentCasingInFileNames": true,
         "noFallthroughCasesInSwitch":
         "module":"esnext",
         "moduleResolution": "node",
         "resolveJsonModule": true,
         "isolatedModules": true,
         "noEmit": true.
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx"
    }
}

 
